#!/usr/bin/env bash

set -euo pipefail

. "$(dirname "$0")"/_functions
. "$(dirname "$0")"/install-brew

saybox "Installing tools"

brew install \
  ack \
  bash \
  curl \
  expect \
  fzf \
  git \
  git-delta \
  gnupg \
  htop \
  jq \
  koekeishiya/formulae/skhd \
  koekeishiya/formulae/yabai \
  lazygit \
  ncdu \
  neovim \
  node \
  pass \
  rg \
  rust \
  stow \
  tldr \
  tmux \
  tree \
  vim \
  watch \
  wget \
  yarn \
  z

saybox "Installing casks"

brew install --cask --no-quarantine \
  alacritty \
  brave-browser \
  caffeine \
  itsycal \
  firefox \
  hiddenbar \
  keepassxc \
  keycastr \
  losslesscut \
  lulu \
  openoffice \
  shottr \
  slack \
  sublime-text \
  vlc \
  vscodium \
  xbar

saybox "Cleanup"
brew cleanup
