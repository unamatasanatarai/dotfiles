wcd() {
  if [ -z "$1" ]; then
    echo "Usage: wcd <command>"
    return 1
  fi
  local cmd_path
  cmd_path="$(command -v "$1")" || {
    echo "Command '$1' not found"
    return 1
  }
  cd -- "$(dirname "$cmd_path")" || return 1
}

take() {
  if [ -z "$1" ]; then
    echo "Usage: take <directory_path>"
    return 1
  fi

  mkdir -p -- "$1" && cd -- "$1" || return 1
}

