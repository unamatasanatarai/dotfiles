#!/usr/bin/env bash

set -euo pipefail

declare -r __VERSION="0.0.1"
declare -r __FILE="$(basename -- "$0")"
declare -r __DIR="$(dirname -- "$0")"

# ------------------------------------------------------------
# DEFAULTS
# ------------------------------------------------------------

o_flag=1

# ------------------------------------------------------------
# PUBLIC INTERFACES
# ------------------------------------------------------------

__args=() # hold all args which are not an `/-{1,2}\w+/` option
main() {
  ##cursor##
  parse_options "$@"
  echo "o_flag is set to: ${o_flag}"
  echo "${__args[*]}"
}

parse_options() {
  while [[ $# -ge 1 ]]; do
    case $1 in

      -h | --help)
        help
        exit 2
        ;;

      -V | --version)
        _version
        exit
        ;;

      -f | --flag)
        shift
        o_flag="$1"
        shift
        continue
        ;;

    esac

    # throws exit 1 if trying to shift non existing crap
    if [[ $# -gt 0 ]]; then
      __args+=("$1")
      shift
    fi
  done
}

# ------------------------------------------------------------
# INTERNALS
# ------------------------------------------------------------

_help_options() {
  # use `#` to separate arg from descriptin
  local options
  options="
  -f, --flag        # change the flag from 1 (default) to something else
  "
  echo "$options" | column -s "#" -t | sed 's/^ */    /'
}

_version() {
  echo "${__FILE}, version ${__VERSION}"
}

help() {
  _version
  echo "Usage: $__FILE template filename [options]

Options:
$(_help_options)

Examples:
    $__FILE -f 'arg modified flag'"
}

# ------------------------------------------------------------
# MAIN
# ------------------------------------------------------------

main "$@"
