#!/usr/bin/env bash

function sayok {
  echo -e " [\033[1;32m✔\033[m] $*"
}

function sayfail {
  echo -e " [\033[1;31m✗\033[0m] $*"
}

function sayask {
  echo -e " [\033[34m➜\033[m] $*"
}

function sayinfo {
  echo -e " [\033[1;34m#\033[m] $*"
}

function saybox {
  local text len hl
  text="$*"
  len=$((${#text} + 6))
  seq=$(for (( i=1; i<=len; i++)); do echo -n "-"; done)
  hl="+ $seq +"
  echo "$hl"
  echo -e "|    \033[1;36m$text\033[0m    |"
  echo "$hl"
}
