#!/usr/bin/env bash

function eok {
  printf " \e[1m\e[38;5;46m✔\e[0m %s\n" "$*"
}

function efail {
  printf " \e[1m\e[38;5;196m✗\e[0m %s\n" "$*"
}

function eask {
  printf " \e[1m\e[38;5;117m؟\e[0m %s\n" "$*"
}

function einfo {
  printf " \e[1m\e[38;5;208m➜\e[0m %s\n" "$*"
}

function ealert {
  printf " \e[1m\e[38;5;220m‼\e[0m %s\n" "$*"
}

function ebox {
  local text len hl
  text="$*"
  len=$((${#text} + 6))
  seq=$(for (( i=1; i<=len; i++)); do echo -n "-"; done)
  hl="+ $seq +"
  echo "$hl"
  echo -e "|    \033[1;36m$text\033[0m    |"
  echo "$hl"
}

