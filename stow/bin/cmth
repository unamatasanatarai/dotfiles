#!/usr/bin/env bash
# todo: used mostly for vim, sooo... a new folder maybe?

set -euo pipefail

__help() {
  echo "usage:"
  echo "   ${0##/*} text"
  echo "   $(basename "$0") stdinput"
  exit 1
}

text="$*"
if [[ -z $text ]]; then
  while IFS= read -r line; do
    text=$line
  done < /dev/stdin
fi

[[ -z $text ]] && __help && exit $?

len=${#text}
max=72
pref_b=$(((max - len) / 2 - 1))
pref_b=${pref_b%%.[[:digit:]]}

msg="# "
for ((i = 0; i <= max+2; i++)); do
  msg+="-"
done
msg+=$'\n'"# "
for ((i = 0; i <= pref_b; i++)); do
  msg+="-"
done
msg+=" $text "
i=$((i + len))
for (( ; i <= max; i++)); do
  msg+="-"
done
msg+=$'\n'"# "
for ((i = 0; i <= max+2; i++)); do
  msg+="-"
done
echo "${msg}"
