#!/usr/bin/env bash

set -euo pipefail

. "$(dirname "$0")"/.lib

VERSION="1.3"
cask_marker="--cask"

# ------------------------------------------------------------
# PRIVATE
# ------------------------------------------------------------

function __is_it_cask {
  [[ "$1" == *" $cask_marker"* ]]
}

function __strip_internal_cask {
  echo "$1" | sed -E 's/ '"$cask_marker"'//g'
}

function fzf_preview {
  local token
  token="$2"
  ebox "$token"
  # todo: taking json and parsing its contents would be more readable and _better_
  if __is_it_cask "$token"; then
    brew info --cask "$(__strip_internal_cask "$token")"
  else
    brew info "$token"
  fi
}

function __list_formulae {
  brew formulae
}

function __list_casks {
  brew casks | sed -E "s/$/ $cask_marker/g"
}

function fzf_help {
  ebox "    bls v. $VERSION    "
  echo "                                        üç∫"
  echo " CTRL+i      Install the selected element"
  echo " CTRL+h      Display this help"
  echo " CTRL+o      Open cask/formulae home page"
}

# ------------------------------------------------------------
# PUBLIC interfaces
# ------------------------------------------------------------

function list_all {
  local casks formulae list
  casks=$(__list_casks)
  formulae=$(__list_formulae)
  list=("${casks[@]}" "${formulae[@]}")

  query=${1:-""}

  echo "${list[@]}" \
    | fzf -q "$query" \
      --header "C+i: install; C+h: help" \
      --scroll-off 2 \
      --prompt "üç∫ ‚û§ " \
      --pointer "‚û§" \
      --marker "‚û§" \
      --ansi \
      --bind "ctrl-i:select+preview(bls --install {})" \
      --bind "ctrl-h:preview(bls --fzf_help)" \
      --bind "ctrl-o:preview(bls --openhp {})" \
      --preview-window "right,70%" \
      --preview="${BASH_SOURCE[0]} --preview {}"
}

function __install {
  local token name
  token="$*"
  name=$(__strip_internal_cask "$token")
  ebox "Installing '$name'"

  if __is_it_cask "$token"; then
    token=$(__strip_internal_cask "$token")
    brew install --cask "$token"
  else
    brew install "$token"
  fi

  echo ""
  eok "I'm done"
}

function help {
  echo "usage: $(basename "$0") <options> name
version $VERSION

  Options:
    --help     This help message
    --version  Display the version number (it is $VERSION)

  Examples:
    List out all formulae and casks, prefilter by 'ncd'
    $(basename "$0") ncd
  "
}

# ------------------------------------------------------------
# ROUTER
# ------------------------------------------------------------

while [[ -n ${1:--help} ]]; do
  case ${1:--help} in

    --preview)
      fzf_preview "$@"
      shift
      exit 0
      ;;

    --install)
      shift
      __install "$@"
      exit 0
      ;;

    --fzf_help)
      fzf_help
      exit 0
      ;;

    --version)
      echo "version: $VERSION"
      exit 0
      ;;

    --openhp)
      shift
      if __is_it_cask "$1"; then
        ebox "$(brew home --cask "$(__strip_internal_cask "$1")")"
      else
        ebox "$(brew home "$1")"
      fi
      exit 0
      ;;

    --help)
      help
      exit 0
      ;;

    *)
      list_all "$@"
      shift
      exit 0
      ;;
  esac
  shift
done
