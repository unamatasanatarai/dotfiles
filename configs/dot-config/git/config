[core]
    pager = delta

[interactive]
    diffFilter = delta --color-only

[add.interactive]
    useBuiltin = false

[delta]
    navigate = true
    light = false
    side-by-side = true
    line-numbers = true
    features = collared-trogon

[include]
    path = ~/.config/delta/themes.gitconfig

[merge]
    conflictstyle = diff3

[diff]
    colorMoved = default
[init]
	defaultBranch = main
