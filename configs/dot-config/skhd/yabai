# Vim arrows
meh - h : /opt/homebrew/bin/skhd -k "left"
meh - j : /opt/homebrew/bin/skhd -k "down"
meh - k : /opt/homebrew/bin/skhd -k "up"
meh - l : /opt/homebrew/bin/skhd -k "right"

# Resize windows
hyper - h : /opt/homebrew/bin/yabai -m window --resize left:-30:0; \
            /opt/homebrew/bin/yabai -m window --resize right:-30:0
hyper - j : /opt/homebrew/bin/yabai -m window --resize bottom:0:30; \
            /opt/homebrew/bin/yabai -m window --resize top:0:30
hyper - k : /opt/homebrew/bin/yabai -m window --resize top:0:-30; \
            /opt/homebrew/bin/yabai -m window --resize bottom:0:-30
hyper - l : /opt/homebrew/bin/yabai -m window --resize right:30:0; \
            /opt/homebrew/bin/yabai -m window --resize left:30:-30

# Equalize the size of windows
hyper - e : /opt/homebrew/bin/yabai -m space --balance

# Make window native fullscreen
hyper - f : /opt/homebrew/bin/yabai -m window --toggle zoom-fullscreen
