#!/usr/bin/env bash

set -euo pipefail

# -----------------------------------------------------------------------------
# PRIVATE FUNCTIONS
# -----------------------------------------------------------------------------

function _set_username {
  echo "ðŸ”§ Setting git user.name to '$1'"
  git config --global user.name "$1"
}

function _set_email {
  echo "ðŸ”§ Setting git user.email to '$1'"
  git config --global user.email "$1"
}

# -----------------------------------------------------------------------------
# PUBLIC INTERFACE
# -----------------------------------------------------------------------------

_username=""
_email=""

function _help() {
  cat <<EOF
Usage:
  $(basename "$0") -u "Your Name" -e "you@example.com"
  OR
  $(basename "$0") "Your Name" "you@example.com"

This sets the global Git author configuration.
EOF
}

function _parse_args() {
  while getopts "u:e:h" opt; do
    case $opt in
      u) _username="$OPTARG" ;;
      e) _email="$OPTARG" ;;
      h) _help; exit 0 ;;
      *) _help; exit 1 ;;
    esac
  done

  shift $((OPTIND - 1))

  if [[ "$#" == 2 ]] && [[ -z "$_username" && -z "$_email" ]]; then
    _username="$1"
    _email="$2"
  fi
}

function main() {
  _parse_args "$@"

  if [[ -z "$_username" && -z "$_email" ]]; then
    _help
    exit 1
  fi

  [[ -n "$_username" ]] && _set_username "$_username"
  [[ -n "$_email" ]] && _set_email "$_email"
}
# -----------------------------------------------------------------------------
main "$@"

