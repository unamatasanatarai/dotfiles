#!/usr/bin/env bash

VENV_DIR="$(pwd)/venv"
[[ -n "$VIRTUAL_ENV" ]] && echo "You are in a virtual environment." && exit 1
[[ -d "$VENV_DIR" ]] && echo "run: vba, or source venv/bin/activate" && exit 1

python3 -m venv "$VENV_DIR"
source "$VENV_DIR/bin/activate"
pip install --upgrade pip
pip install uv
deactivate
